<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4" >

                <TextView
                    android:id="@+id/tvCombatBossName"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/tvBossHp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <ProgressBar
                    android:id="@+id/barBossHp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgBattleAvatar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="30dp"
                android:layout_weight="2"
                android:background="@drawable/combat_elevator"
                android:src="@drawable/wombat" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3" >

                <nl.glasbakheroes.StudyOrDie.view.BattleAttackOptionsView
                    android:id="@+id/battleAttackOptionsView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >
                </nl.glasbakheroes.StudyOrDie.view.BattleAttackOptionsView>

                <nl.glasbakheroes.StudyOrDie.view.BattleStatView
                    android:id="@+id/battleStatView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >
                </nl.glasbakheroes.StudyOrDie.view.BattleStatView>

            </LinearLayout>

        </LinearLayout>

        <nl.glasbakheroes.StudyOrDie.view.BattleMenuOptionsView
            android:id="@+id/battleMenuOptionsView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4" >
        </nl.glasbakheroes.StudyOrDie.view.BattleMenuOptionsView>

    </LinearLayout>

</LinearLayout>
