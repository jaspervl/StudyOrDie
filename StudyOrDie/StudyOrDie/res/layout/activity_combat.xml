<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnBeatMe"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/beatme" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2" >

                <nl.glasbakheroes.StudyOrDie.view.BattleAttackOptionsView
                    android:id="@+id/battleAttackOptionsView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >
                </nl.glasbakheroes.StudyOrDie.view.BattleAttackOptionsView>

                <nl.glasbakheroes.StudyOrDie.view.BattleStatView
                    android:id="@+id/battleStatView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >
                </nl.glasbakheroes.StudyOrDie.view.BattleStatView>

            </LinearLayout>

        </LinearLayout>

        <nl.glasbakheroes.StudyOrDie.view.BattleMenuOptionsView
            android:id="@+id/battleMenuOptionsView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4" >
        </nl.glasbakheroes.StudyOrDie.view.BattleMenuOptionsView>

    </LinearLayout>

</LinearLayout>
